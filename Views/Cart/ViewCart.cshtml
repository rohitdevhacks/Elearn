@model IEnumerable<onl.Models.Cart>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2>Your Cart</h2>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="@Url.Content($"~/Content/Images/{item.Thumbnail}")" class="card-img-top" alt="Thumbnail" style="height: 200px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><strong>Price:</strong> $@item.Price</p>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-4">
            <form method="post" asp-action="RazorpayCheckout" asp-controller="Cart">
                <input type="hidden" name="totalAmount" value="@ViewBag.TotalAmount" />
                <button type="submit" class="btn btn-primary">Purchase All</button>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
