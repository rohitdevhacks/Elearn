@model IEnumerable<onl.Models.Cart>

<h2>My Courses</h2>

<div class="card-container">
    @foreach (var item in Model)
    {
        <div class="card">
            <img src="@Url.Content(item.Thumbnail)" alt="Thumbnail" class="card-img-top" />
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Description</p>
                <p class="card-price">@item.Price</p>
                <a href="@Url.Action("Watch", "Test", new { id = item.cart_id })" class="btn btn-primary">Watch Now</a>
            </div>
        </div>
    }
</div>

<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: center;
    }

    .card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 0.5rem;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        width: 300px;
        text-align: center;
        margin-bottom: 1rem;
    }

    .card-img-top {
        width: 100%;
        height: auto;
    }

    .card-body {
        padding: 1rem;
    }

    .card-title {
        font-size: 1.25rem;
        margin: 0;
    }

    .card-text {
        font-size: 1rem;
        margin: 0.5rem 0;
    }

    .card-price {
        font-size: 1.25rem;
        color: #333;
        font-weight: bold;
    }

    .btn {
        display: inline-block;
        font-size: 1rem;
        font-weight: 600;
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>
